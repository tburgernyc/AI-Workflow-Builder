# Monday.com Claude Integration App - Environment Variables
# Copy this file to .env and fill in your values

# Monday.com OAuth credentials
# Get these from your Monday.com Developer Center
MONDAY_CLIENT_ID=
MONDAY_CLIENT_SECRET=
MONDAY_SIGNING_SECRET=

# Redirect URI for OAuth callback
# For local development with ngrok: https://your-ngrok-url.ngrok-free.app/oauth/callback
# For production: https://your-production-url.com/oauth/callback
REDIRECT_URI=

# Monday.com API token (for SDK authentication)
# This is required for API operations
MONDAY_API_TOKEN=

# Claude AI API key (for AI assistant)
# Get this from your Anthropic account
CLAUDE_API_KEY=

# Claude API configuration (optional, defaults provided in code)
CLAUDE_API_URL=https://api.anthropic.com/v1/messages
CLAUDE_API_VERSION=2023-06-01
CLAUDE_MODEL=claude-3-opus-20240229

# Server configuration
PORT=3000
NODE_ENV=development

# Region for API endpoints (US or EU)
REGION=US

# Security configuration (generate with npm run generate-keys)
# These are required for secure operation
ENCRYPTION_KEY=
SESSION_SECRET=

# Admin API key for administrative operations
# Generate a secure random string
ADMIN_API_KEY=

# Redis configuration (optional, for distributed caching)
REDIS_URL=
REDIS_PASSWORD=

# Monitoring configuration (optional)
LOG_LEVEL=info
SENTRY_DSN=
